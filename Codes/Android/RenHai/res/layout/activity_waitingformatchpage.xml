<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/maingreen" >
    
    <TextView 
        android:id="@+id/waitingformatch_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" 
        android:gravity="center"       
        android:textSize="@dimen/waitformatch_countersize"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="@string/waitformatch_counterstart" />
    
    <TextView 
        android:id="@+id/waitingformatch_counternote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_below="@id/waitingformatch_counter"
        android:layout_marginTop="16dp"
        android:layout_centerInParent="true" 
        android:gravity="center"       
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="@string/waitformatch_counternote" />

</RelativeLayout>
